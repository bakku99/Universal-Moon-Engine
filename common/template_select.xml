<root>
	<!-- NOTE: Only meant to be used as a base class for single source, single value custom selection controls -->
	<template name="control_select_base">
		<genericcontrol>
			<anchored height="20" />
			<script file="common/scripts/control_select_base.lua" />
		</genericcontrol>
	</template>

	<template name="button_iconcycler">
		<control_select_base>
			<anchored width="20" />
			<script file="common/scripts/button_iconcycler.lua" />
			<!-- Possible parameters
			<sourceless />
			<parameters>
				<defaultlabelres>stringassetname</defaultlabelres>
				<defaultlabel>string</defaultlabel>
				<icons>iconassetname1|iconassetname2|...</icons>
				<values>value1|value2|...</values>
			</parameters>
			-->
		</control_select_base>
	</template>
	<template name="button_stringcycler">
		<control_select_base>
			<frame name="fielddark" offset="10,5,10,5" hidereadonly="true" />
			<stateframe>
				<hover name="fieldfocus" offset="10,5,10,5" hidereadonly="true" />
			</stateframe>
			<parameters>
				<defaultlabel>-</defaultlabel>
			</parameters>
			<script file="common/scripts/button_stringcycler.lua" />
			<!-- Possible parameters
			<sourceless />
			<parameters>
				<defaultlabelres>stringassetname</defaultlabelres>
				<defaultlabel>string</defaultlabel>
				<labelsres>stringassetname1|stringassetname2|...</labelsres>
				<labels>string1|string2|...</labels>
				<values>value1|value2|...</values>
			</parameters>
			-->
		</control_select_base>
	</template>
	<template name="buttongroup_radio">
		<control_select_base>
			<script file="common/scripts/buttongroup_radio.lua" />
			<!-- Possible parameters
			<stateicons>
				<on>button_checkon</on>
				<off>button_checkoff</off>
			</stateicons>
			<parameters>
				<optionwidth>50</optionwidth>
				<labelsres>stringassetname1|stringassetname2|...</labelsres>
				<labels>string1|string2|...</labels>
				<values>value1|value2|...</values>
			</parameters>
			-->
		</control_select_base>
	</template>

	<template name="combobox">
		<control_select_base>
			<frame>
				<name>fieldlight</name>
				<offset>10,5,10,5</offset>
			</frame>
			<!-- Possible data parameters
			<sourceless />
			<parameters>
				<defaultlabelres>stringassetname</defaultlabelres>
				<defaultlabel>string</defaultlabel>
				<labelsres>stringassetname1|stringassetname2|...</labelsres>
				<labels>string1|string2|...</labels>
				<values>value1|value2|...</values>
			</parameters>
			-->
			<!-- Possible display parameters
			<buttonoffset>0,0</buttonoffset>
			<listoffset>0,5</listoffset>
			<listdirection>up</listdirection>
			<listfonts>
				<normal>sheettext</normal>
				<selected>sheetlabel</selected>
			</listfonts>
			<listframes>
				<normal></normal>
				<selected>rowshade</selected>
			</listframes>
			<listmaxsize>0</listmaxsize>
			-->
			<script file="common/scripts/combobox.lua"/>
		</control_select_base>
	</template>
	<template name="comboboxc">
		<combobox>
			<sourceless />
		</combobox>
	</template>
	<template name="combobox_button">
		<genericcontrol>
			<anchored width="15" height="10">
				<top />
				<right />
			</anchored>
			<disabled />
			<invisible />
			<script>
				function setTarget(_)
					-- DEPRECATED - 2025-08
				end
			</script>
		</genericcontrol>
	</template>
	<template name="combobox_list">
		<windowlist>
			<anchored height="50">
				<right />
				<bottom />
			</anchored>
			<frame name="combobox_list" offset="2,2,2,2" />
			<datasource/>
			<class>combobox_item</class>
			<invisible/>
			<sortby><control>Order</control></sortby>
			<script file="common/scripts/combobox_list.lua" />
		</windowlist>
	</template>
 	<template name="combobox_list_sorted">
		<combobox_list>
			<sortby merge="replace"><control>Text</control></sortby>
		</combobox_list>
	</template>
	<windowclass name="combobox_item">
		<script file="common/scripts/combobox_item.lua" />
		<sheetdata>
			<hnc name="Order" />
			<hsc name="Value" />

			<anchor_listitem_left_flat />
			<anchor_listitem_right_flat />

			<button_idelete name="idelete">
				<anchored>
					<top />
					<right parent="rightanchor" anchor="left" relation="relative" />
				</anchored>
			</button_idelete>
			<simplestring name="Text">
				<anchored position="insidetopleft" height="20">
					<left offset="5" />
					<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
				</anchored>
				<readonly />
				<script>
					function onClickDown()
						return true;
					end
					function onClickRelease()
						window.onClicked();
					end
				</script>
			</simplestring>
		</sheetdata>
	</windowclass>
	<template name="combobox_scrollbar">
		<scrollbarcontrol>
			<anchored position="insideleft" width="10" />
			<normal name="combobox_scrollbar" />
		</scrollbarcontrol>
	</template>
</root>
